{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "command-center",
    "player"
  ],
  "permissions": [
    {
      "identifier": "http:default",
      "allow": [
        {
          "url": "https://**"
        }
      ]
    },
    "core:default",
    "log:default",
    "store:default",
    "dialog:default",
    "fs:default",
    "core:window:allow-set-size",
    "core:window:allow-show",
    "core:window:allow-hide",
    "clipboard:write-all",
    "clipboard:read-all"
  ]
}